<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <name>Stratio HDFS Connector core</name>
    <artifactId>stratio-connector-hdfs</artifactId>
    <description>The HDFS-Crossdata connector core</description>
    <url>http://www.stratio.com</url>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.stratio.connector</groupId>
        <artifactId>stratio-connector-hdfs-parent</artifactId>
        <version>0.5.0-SNAPSHOT</version>
    </parent>
    <dependencies>
        <dependency>
            <groupId>com.stratio.crossdata</groupId>
            <artifactId>crossdata-connector</artifactId>
            <version>${version.crossdata}</version>
        </dependency>
        <dependency>
            <groupId>com.stratio.crossdata</groupId>
            <artifactId>crossdata-common</artifactId>
            <version>${version.crossdata}</version>
        </dependency>
        <dependency>
            <groupId>com.stratio.connector</groupId>
            <artifactId>stratio-connector-commons-core</artifactId>
            <version>${version.connector.commons}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.hadoop</groupId>
            <artifactId>hadoop-hdfs</artifactId>
            <version>${hadoop.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>com.google.protobuf</groupId>
                    <artifactId>protobuf-java</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>javax.servlet</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.apache.hadoop</groupId>
            <artifactId>hadoop-client</artifactId>
            <version>${hadoop.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>javax.servlet</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
            <version>${scala.version}</version>
        </dependency>
        <dependency>
            <groupId>org.scalatest</groupId>
            <artifactId>scalatest_${scala.binary.version}</artifactId>
            <version>${scala.test.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.twitter</groupId>
            <artifactId>parquet-column</artifactId>
            <version>1.6.0rc3</version>
        </dependency>
        <dependency>
            <groupId>com.twitter</groupId>
            <artifactId>parquet-hadoop</artifactId>
            <version>1.6.0rc3</version>
            <exclusions>
                <exclusion>
                    <groupId>javax.servlet</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.17</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.spark-project.akka</groupId>
            <artifactId>akka-slf4j_2.10</artifactId>
            <version>${akka.version}-spark</version>
        </dependency>
        <dependency>
            <groupId>org.apache.spark</groupId>
            <artifactId>spark-core_2.10</artifactId>
            <version>${spark.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.spark</groupId>
            <artifactId>spark-sql_2.10</artifactId>
            <version>${spark.version}</version>
        </dependency>
        <dependency>
            <groupId>org.scalamock</groupId>
            <artifactId>scalamock-scalatest-support_${scala.binary.version}</artifactId>
            <version>3.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.powermock</groupId>
            <artifactId>powermock-api-mockito</artifactId>
            <version>1.5.5</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.powermock</groupId>
            <artifactId>powermock-module-junit4</artifactId>
            <version>1.5.5</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/main/scala</sourceDirectory>
        <testSourceDirectory>src/test/scala</testSourceDirectory>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
        <plugins>


            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.7.2.201409121644</version>
                <executions>
                    <execution>
                        <id>unit-test-coverage</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                        <configuration>
                            <destFile>${basedir}/target/jacocoUT.exec</destFile>
                            <propertyName>jacoco-UT-argline</propertyName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>integration-test-overage</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                        <configuration>
                            <destFile>${basedir}/target/jacocoIT.exec</destFile>
                            <propertyName>jacoco-IT-argline</propertyName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <skip>true</skip>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>net.alchim31.maven</groupId>
                <artifactId>scala-maven-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <checkMultipleScalaVersions>false</checkMultipleScalaVersions>
                    <args>
                        <arg>-Xmax-classfile-name</arg>
                        <arg>130</arg>
                    </args>
                </configuration>
                <executions>
                    <execution>
                        <id>compile</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <phase>compile</phase>
                    </execution>
                    <execution>
                        <id>test-compile</id>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                        <phase>test-compile</phase>
                    </execution>
                    <execution>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.18</version>
                <configuration>
                    <skipTests>${skipUTs}</skipTests>
                    <argLine>
                        ${jacoco-UT-argline}
                        -XX:MaxPermSize=256m
                        -Dlogback.configurationFile=conf/logger/develop.logger.xml
                    </argLine>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.18</version>
                <executions>
                    <execution>
                        <id>integration-test</id>
                        <goals>
                            <goal>integration-test</goal>
                        </goals>
                        <configuration>
                            <useSystemClassLoader>false</useSystemClassLoader>
                            <useManifestOnlyJar>true</useManifestOnlyJar>
                            <skipTests>${skipITs}</skipTests>
                            <includes>
                                <include>**/integration/**/*Spec.*</include>
                            </includes>
                            <argLine>
                                ${jacoco-IT-argline}
                                -Xmx1024m
                                -XX:MaxPermSize=256m
                                -Dlogback.configurationFile=conf/logger/develop.logger.xml
                                -Djava.security.policy=conf/java.policy
                                -XX:+HeapDumpOnOutOfMemoryError
                            </argLine>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!--    <plugin>
                    <artifactId>crossdata-connector-maven-plugin</artifactId>
                    <groupId>com.stratio.crossdata</groupId>
                    <version>${version.crossdata}</version>
                    <executions>
                        <execution>
                            <id>crossdata</id>
                            <goals>
                                <goal>install</goal>
                            </goals>
                            <phase>package</phase>
                            <configuration>
                                <mainClass>com.stratio.connector.hdfs.HDFSConnector</mainClass>
                                <jmxPort>7184</jmxPort>
                            </configuration>
                        </execution>
                    </executions>
                </plugin> -->

        </plugins>
    </build>
    <profiles>
        <profile>
            <id>package</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>appassembler-maven-plugin</artifactId>
                        <version>1.10</version>
                        <executions>
                            <execution>
                                <id>ppassembler</id>
                                <goals>
                                    <goal>assemble</goal>
                                </goals>
                                <phase>package</phase>
                                <configuration>
                                    <configurationDirectory>conf</configurationDirectory>
                                    <copyConfigurationDirectory>true</copyConfigurationDirectory>
                                    <includeConfigurationDirectoryInClasspath>true</includeConfigurationDirectoryInClasspath>
                                    <assembleDirectory>${project.build.directory}/stratio-connector-hdfs</assembleDirectory>
                                    <extraJvmArguments>-Djava.net.preferIPv4Stack=true -Dcom.sun.management.jmxremote.port=${jmx.port} -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false</extraJvmArguments>
                                    <platforms>
                                        <platform>windows</platform>
                                        <platform>unix</platform>
                                    </platforms>
                                    <programs>
                                        <program>
                                            <mainClass>com.stratio.connector.hdfs.HDFSConnector</mainClass>
                                            <id>stratio-connector-hdfs</id>
                                        </program>
                                    </programs>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.stratio.mojo.unix</groupId>
                        <artifactId>unix-maven-plugin</artifactId>
                        <version>1.1.5</version>
                        <extensions>true</extensions>
                        <executions>
                            <execution>
                                <id>deb</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package-deb</goal>
                                    <goal>package-rpm</goal>
                                </goals>
                                <configuration>
                                    <contact><![CDATA[Stratio <jmgomez@stratio.com>]]></contact>
                                    <contactEmail>jmgomez@stratio.com</contactEmail>
                                    <size>1</size>
                                    <deb>
                                        <section>devel</section>
                                    </deb>
                                    <rpm>
                                        <group>stratio</group>
                                    </rpm>
                                    <assembly>
                                        <mkdirs>
                                            <paths>
                                                <path>etc/sds/stratio-connector-hdfs</path>
                                                <path>etc/default</path>
                                            </paths>
                                            <attributes>
                                                <user>stratio</user>
                                                <group>stratio</group>
                                                <mode>644</mode>
                                            </attributes>
                                        </mkdirs>
                                        <copyDirectory>
                                            <from>target/stratio-connector-hdfs/bin</from>
                                            <to>opt/sds/stratio-connector-hdfs/bin</to>
                                        </copyDirectory>
                                        <copyDirectory>
                                            <from>target/stratio-connector-hdfs/repo</from>
                                            <to>opt/sds/stratio-connector-hdfs/repo</to>
                                        </copyDirectory>
                                        <copyDirectory>
                                            <from>target/stratio-connector-hdfs/conf</from>
                                            <to>opt/sds/stratio-connector-hdfs/conf</to>
                                        </copyDirectory>
                                        <copyDirectory>
                                            <from>src/main/template</from>
                                            <to>opt/sds/stratio-connector-hdfs/template</to>
                                        </copyDirectory>
                                        <copyDirectory>
                                            <from>src/main/config</from>
                                            <to>etc/sds/stratio-connector-hdfs</to>
                                        </copyDirectory>
                                        <copyDirectory>
                                            <from>src/main/unix/files_and_dirs/etc/default</from>
                                            <to>etc/default</to>
                                        </copyDirectory>
                                        <copyFile>
                                            <path>src/main/include/LICENSE</path>
                                            <toFile>opt/sds/stratio-connector-hdfs/LICENSE</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/include/NOTICE</path>
                                            <toFile>opt/sds/stratio-connector-hdfs/NOTICE</toFile>
                                        </copyFile>
                                    </assembly>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
